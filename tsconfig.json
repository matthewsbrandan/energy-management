{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",
    "allowJs": true,                     
    "strict": false,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
   ]

}