<%- include('layout/header', headerOptions) -%>
<script>
  const route = { 
    auth: {
      register: () => "<%= route.auth.register() %>",
      login: () => "<%= route.auth.login() %>",
      logout: () => "<%= route.auth.logout() %>"
    }
  }
</script>

<main class="w-full h-full flex rounded-2xl shadow-lg border-2 border-zinc-800/50 overflow-hidden">
