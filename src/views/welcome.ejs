    background-image: url('https://conteudo.imguol.com.br/c/noticias/f3/2021/08/31/lampada-energia-luz-1630442994250_v2_900x506.jpg');
    background-size: cover;
    background-position: center;
  "></article>
  <section class="w-full max-w-lg bg-zinc-900/50 py-10 px-8 flex flex-col justify-center" id="dynamic-form">
    <%- include('auth/card-sign-in') %>
    <%- include('auth/card-sign-up') %>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14"></script>
  <script src="/js/services/auth.js"></script>
  <script src="/js/welcome.js"></script>
</main>

<%- include('layout/footer') -%>