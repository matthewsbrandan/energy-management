<form method="POST" v-if="section === 'sign-up'" v-on:submit.prevent="submitSignUp">
  <header class="mb-4">
    <h2 class="text-2xl font-semibold leading-7 text-amber-400">Energy Management</h2>
    <h3 class="font-semibold text-gray-600">Cadastre-se</h3>
  </header>
  <div class="mt-2 mb-6">
    <div class="mb-4">
      <div class="rounded-lg flex items-center pl-2 gap-2 shadow-sm ring-1 ring-inset ring-gray-500 focus-within:ring-2 focus-within:ring-inset focus-within:ring-amber-600 sm:max-w-md">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: currentColor;"><path d="M7.5 6.5C7.5 8.981 9.519 11 12 11s4.5-2.019 4.5-4.5S14.481 2 12 2 7.5 4.019 7.5 6.5zM20 21h1v-1c0-3.859-3.141-7-7-7h-4c-3.86 0-7 3.141-7 7v1h17z"></path></svg>
        <input
          type="text"
          class="w-full block flex-1 border-0 outline-none bg-transparent p-2 text-gray-400 placeholder:text-gray-600 focus:ring-0 sm:text-sm sm:leading-6" 
          placeholder="Digite o seu nome..."
          v-model="sign_up.name"
          required
        />
      </div>
    </div>
    <div class="mb-4">
      <div class="rounded-lg flex items-center pl-2 gap-2 shadow-sm ring-1 ring-inset ring-gray-500 focus-within:ring-2 focus-within:ring-inset focus-within:ring-amber-600 sm:max-w-md">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: currentColor;"><path d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zm0 4.7-8 5.334L4 8.7V6.297l8 5.333 8-5.333V8.7z"></path></svg>
        <input
          type="email"
          class="w-full block flex-1 border-0 outline-none bg-transparent p-2 text-gray-400 placeholder:text-gray-600 focus:ring-0 sm:text-sm sm:leading-6" 
          placeholder="Digite o seu email..."
          v-model="sign_up.email"
          required
        />
      </div>
    </div>
    <div class="mb-4">
      <div class="rounded-lg flex items-center pl-2 gap-2 shadow-sm ring-1 ring-inset ring-gray-500 focus-within:ring-2 focus-within:ring-inset focus-within:ring-amber-600 sm:max-w-md">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: currentColor"><path d="M20 12c0-1.103-.897-2-2-2h-1V7c0-2.757-2.243-5-5-5S7 4.243 7 7v3H6c-1.103 0-2 .897-2 2v8c0 1.103.897 2 2 2h12c1.103 0 2-.897 2-2v-8zM9 7c0-1.654 1.346-3 3-3s3 1.346 3 3v3H9V7z"></path></svg>
        <input
          type="password"
          class="w-full block flex-1 border-0 outline-none bg-transparent p-2 text-gray-400 placeholder:text-gray-600 focus:ring-0 sm:text-sm sm:leading-6" 
          placeholder="Digite a sua senha..."
          v-model="sign_up.password"
          required
        />
      </div>
    </div>
    <div class="mb-4">
      <div 
        class="rounded-lg flex items-center pl-2 gap-2 shadow-sm ring-1 ring-inset focus-within:ring-2 focus-within:ring-inset sm:max-w-md"
        v-bind:class="{ 'ring-gray-500 focus-within:ring-amber-600': (!sign_up.password || !sign_up.confirm_password || sign_up.password === sign_up.confirm_password), 'ring-red-500 focus-within:ring-red-600':  (sign_up.password && sign_up.confirm_password && sign_up.password !== sign_up.confirm_password)}"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: currentColor"><path d="M20 12c0-1.103-.897-2-2-2h-1V7c0-2.757-2.243-5-5-5S7 4.243 7 7v3H6c-1.103 0-2 .897-2 2v8c0 1.103.897 2 2 2h12c1.103 0 2-.897 2-2v-8zM9 7c0-1.654 1.346-3 3-3s3 1.346 3 3v3H9V7z"></path></svg>
        <input
          type="password"
          class="w-full block flex-1 border-0 outline-none bg-transparent p-2 text-gray-400 placeholder:text-gray-600 focus:ring-0 sm:text-sm sm:leading-6" 
          placeholder="Confirme a sua senha..."
          v-model="sign_up.confirm_password"
          required
        />
      </div>
    </div>
  </div>
  <button
    type="submit"
    class="block w-full text-center rounded-md bg-amber-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600 mb-2"
  >
    <span class="flex gap-2 justify-center items-center" v-if="state === 'loading'">
      <svg 
        class="animate-spin h-5 w-5 mr-3"
        xmlns="http://www.w3.org/2000/svg"
        width="24" height="24" viewBox="0 0 24 24"
        style="fill: currentColor;"
      >
        <path d="M12 22c5.421 0 10-4.579 10-10h-2c0 4.337-3.663 8-8 8s-8-3.663-8-8c0-4.336 3.663-8 8-8V2C6.579 2 2 6.58 2 12c0 5.421 4.579 10 10 10z"></path>
      </svg>
      Logando...
    </span>
    <span v-if="state !== 'loading'">
      Cadastrar
    </span>
  </button>
  <button
    type="button"
    class="block w-full text-center rounded-md bg-transparent px-3 py-1 text-sm font-semibold text-gray-600 shadow-sm hover:bg-zinc-950 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-zinc-400"
    v-on:click="goToSection('sign-in')"
  >JÃ¡ sou cadastrado</button>
</form>