<%- include('../layout/header', headerOptions) -%>
<main class="w-full h-full flex flex-col rounded-2xl shadow-lg border-2 border-zinc-800/50 overflow-hidden">
  <%- include('../components/menu', { active: 'Perfil' }) -%>

  <div class="flex items-center gap-x-6 w-full bg-zinc-800/60 px-6 py-3">
    <img class="h-16 w-16 rounded-full bg-gray-100/80 p-1" src="<%= auth_user.avatar ? auth_user.avatar : '/images/avatar-default.svg' %>" alt="Avatar">
    <div>
      <h3 class="text-base font-semibold tracking-tight text-gray-300"><%= auth_user.name %></h3>
      <p class="text-sm font-semibold text-amber-400"><%= auth_user.email %></p>
    </div>
    <div class="ml-auto text-sm text-gray-400">
      <% if(auth_user.home_ip){ %>
        <strong>HOME IP:</strong>
        <%= auth_user.home_ip %>
      <% }else{ %>
        <button
          type="button"
          class="block w-full text-center rounded-md bg-amber-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600 mb-2"
        >Configurar Home-IP</button>
      <% } %>
    </div>
  </div>

  <section class="flex-1 p-4">
    <div class="bg-white/5 py-24 sm:py-32">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <dl class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-3">
          <div class="mx-auto flex max-w-xs flex-col gap-y-4">
            <dt class="text-base text-gray-600">Dispositivos Conectados</dt>
            <dd class="order-first text-3xl font-semibold tracking-tight text-gray-400 sm:text-5xl">0</dd>
          </div>
          <div class="mx-auto flex max-w-xs flex-col gap-y-4">
            <dt class="text-base text-gray-600">Monitoramento de Energia<br/>(hoje)</dt>
            <dd class="order-first text-3xl font-semibold tracking-tight text-gray-400 sm:text-5xl">0</dd>
          </div>
          <div class="mx-auto flex max-w-xs flex-col gap-y-4">
            <dt class="text-base text-gray-600">Dispositivos Ativos</dt>
            <dd class="order-first text-3xl font-semibold tracking-tight text-gray-400 sm:text-5xl">0</dd>
          </div>
        </dl>
      </div>
    </div>

    
    <!-- public is_darkmode?: boolean;
    public timeout?: number;
    public requests_only_at_home?: boolean; -->
  </section>
</main>
<%- include('../layout/footer') -%>